pcm.!default {
   type asym
   playback.pcm "hda_out"
   capture.pcm "hda_in"
}

pcm.hda_out {
   type plug
   slave.rate 48000
   slave.pcm {
      type aeq
      slave.pcm {
         type dmix
         ipc_key 1234
         ipc_perm 0666
         slave.format S16_LE
         slave.channels 2
         slave.rate 48000
         slave.period_size 1024
         slave.buffer_size 16384
         slave.pcm "hw:0,0"
      }
   }
}

pcm.hda_in {
   type plug
   slave.rate 48000
   slave.pcm {
      type dsnoop
      ipc_key 1235
      ipc_perm 0666
      slave.format S16_LE
      slave.channels 2
      slave.rate 48000
      slave.period_size 1024
      slave.buffer_size 16384
      slave.pcm "hw:0,0"
   }
}
