<?xml version="1.0" encoding="UTF-8"?>
<labwc_config>
  <theme>
    <name>${THEME}</name>
    <icon>gnome</icon>
    <cornerRadius>0</cornerRadius>
    <font place="ActiveWindow">
      <name>Sans</name>
      <size>${FONT_DEV_PTS}</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>Sans</name>
      <size>${FONT_DEV_PTS}</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuItem">
      <name>Sans</name>
      <size>${FONT_DEV_PTS}</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="OSD">
      <name>Sans</name>
      <size>${FONT_DEV_PTS}</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
  </theme>
  <keyboard>
    <!-- Keybindings for windows -->
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>
    <keybind key="A-F11">
      <action name="ToggleFullscreen"/>
    </keybind>
    <keybind key="A-space">
      <action name="ShowMenu">
        <menu>client-menu</menu>
      </action>
    </keybind>
    <keybind key="W-k">
      <action name="ToggleKeybinds"/>
    </keybind>
    <!-- Keybindings for window switching -->
    <keybind key="A-Tab">
      <action name="NextWindow"/>
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow"/>
    </keybind>
    <!-- Half screen shortcuts -->
    <keybind key="W-Left">
      <action name="SnapToEdge" direction="left"/>
    </keybind>
    <keybind key="W-Right">
      <action name="SnapToEdge" direction="right"/>
    </keybind>
    <keybind key="W-Up">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="W-Down">
      <action name="Iconify"/>
    </keybind>
    <!-- Application shortcuts -->
    <keybind key="W-e">
      <action name="Execute">
        <command>thunar</command>
      </action>
    </keybind>
    <keybind key="W-r">
      <action name="Execute">
        <command>gmrun</command>
      </action>
    </keybind>
    <keybind key="W-t">
      <action name="Execute">
        <command>xfce4-terminal</command>
      </action>
    </keybind>
    <keybind key="W-w">
      <action name="Execute">
        <command>firefox</command>
      </action>
    </keybind>
    <keybind key="Print">
      <action name="Execute">
        <command>wlscreenshot</command>
      </action>
    </keybind>
    <keybind key="C-equal">
      <action name="Execute">
        <command>sh -c "wmctrl -x -a galculator || exec galculator"</command>
      </action>
    </keybind>
    <keybind key="XF86Calculator">
      <action name="Execute">
        <command>sh -c "wmctrl -x -a galculator || exec galculator"</command>
      </action>
    </keybind>
    <keybind key="XF86AudioPlay">
      <action name="Execute">
        <command>playpause</command>
      </action>
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>amixer set Master 3%+</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>amixer set Master 3%-</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>amixer set Master toggle</command>
      </action>
    </keybind>
    <keybind key="XF86HomePage">
      <action name="Execute">
        <command>audtool --playback-stop</command>
      </action>
    </keybind>
    <keybind key="C-A-Delete">
      <action name="Execute">
        <command>swaylock</command>
      </action>
    </keybind>
    <keybind key="W-q">
      <action name="Execute">
        <command>xlogout</command>
      </action>
    </keybind>
  </keyboard>
  <mouse>
    <default />
    <context name="Desktop">
      <mousebind button="Left" action="Press">
        <action name="None"/>
      </mousebind>
    </context>
    <context name="TitleBar">
      <mousebind direction="Up" action="Scroll">
        <action name="None"/>
      </mousebind>
      <mousebind direction="Down" action="Scroll">
        <action name="None"/>
      </mousebind>
    </context>
  </mouse>
  <libinput>
    <device category="Logitech Wireless Mouse">
      <pointerSpeed>-0.5</pointerSpeed>
    </device>
  </libinput>
  <resize popupShow="Nonpixel"/>
</labwc_config>
